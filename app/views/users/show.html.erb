<h3>User</h3>
<p>User: <%= @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>

<h3>Мои видео</h3>
<p class="operations"><%= link_to 'Добавить видео', new_user_video_path(@user) %></p>
<table>
  <tr>
    <th class="operations">Операции</th>
    <th>Наименование</th>
    <th>Описание</th>
    <th>Видео</th>
  </tr>

  <% @user.videos.each do |video| %>
      <tr>
        <td><%= link_to 'Смотр', user_video_path(@user, video)%>&nbsp;
          <%= link_to 'Ред', edit_user_video_path(@user, video)%>&nbsp;
          <%= link_to 'Уд', [@user, video], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= video.name %></td>
        <td><%= video.description %></td>
        <td><%= video.src %></td>
      </tr>
  <% end %>
</table>
<br/>
